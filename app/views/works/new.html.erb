<h2>Add a new work</h2>
<%= form_with model: @work, class: 'create-work' do |f| %>

  Category: <%= f.select :category, [['movie'], ['album'], ['book']] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist %>
  <%= f.text_field :artist %>

  <%= f.label :published %>
  <%= f.text_field :published %>
  <%= f.label :description %>
  <%= f.text_field :description%>


  <%= f.submit "Create Work", class: "work-button" %>
<% end %>