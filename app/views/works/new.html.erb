<%= form_with model: @work, class: 'create-work' do |f| %>
  <p>Please provide the following information to save your driver to our database:</p>

  Category: <%= f.select :category, [['movie'], ['album'], ['book']] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist %>
  <%= f.text_field :artist %>

  <%= f.submit "Create Work", class: "work-button" %>
<% end %>