<h2>List of Works</h2>

<section>
  <h4>Albums</h4>

  <table class="table">
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
      </tr>
    </thead>

    <% Work.most_votes("album").each do |work| %>
    <tr>
      <td> <%= work.votes.count %> </td>
      <td><%= link_to work[:title], work_path(work.id), method: :get%></td>
      <td><%= work[:artist] %></td>
      <td><%= work[:published] %></td>
    </tr>
    <% end %>
  </table> 

